<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.mgl.myratingbar.sample.MainActivity">

    <com.mgl.myratingbar.library.CustomRatingBarXML
        android:id="@+id/crb_activity_base_sercive_record_evaluationRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        custom:clickable="true"
        custom:initSelectValue="2.5"
        custom:starCount="5"
        custom:starEmpty="@drawable/star3"
        custom:starFull="@drawable/star1"
        custom:starHalf="@drawable/star2"
        custom:starImageSize="35"
        custom:starMargin="5"
        custom:stepWay="Half"
        custom:valueOfEveryStar="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="rating bar"
        android:textColor="#ffffff"
        android:textSize="17sp" />
</LinearLayout>
